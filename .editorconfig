# https://editorconfig.org/
root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

# Data files
[data/**.txt]
trim_trailing_whitespace = false
indent_style = tab

# Code files
[*.{cpp,h,rc,hpp}, SConstruct, SConscript]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false

# Scripts
[*.{sh,ps1}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space
