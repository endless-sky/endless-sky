# https://editorconfig.org/
root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

# Data files
[data/**.txt]
trim_trailing_whitespace = false
indent_style = tab

# Code files
[{*.{cpp,h,rc,hpp}, SConstruct, SConscript}]
indent_style = tab
# Except any third-party libraries
[catch.hpp]
indent_style = unset
# And files that are special
[test_datafile.cpp]
indent_style = unset
[source/*Shader.cpp]
indent_style = unset
[source/text/Font.cpp]
indent_style = unset
[source/Mask.cpp]
indent_style = unset

# Markdown
[*.md]
trim_trailing_whitespace = false

# Scripts
[*.{sh,ps1}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Ignore assets
[{images,sounds}/**]
insert_final_newline = unset
trim_trailing_whitespace = unset
