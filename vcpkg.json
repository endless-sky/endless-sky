{
  "dependencies": [
    {
      "name": "openal-soft",
      "platform": "osx"
    }
  ],
  "features": {
    "system-libs": {
      "description": "System libraries required to build ES.",
      "dependencies": [
        {
          "name": "glew",
          "platform": "!osx"
        },
        "libpng",
        "libjpeg-turbo",
        "libmad",
        {
          "name": "libuuid",
          "platform": "linux"
        },
        "openal-soft",
        {
          "name": "openal-soft",
          "features": [
            "pipewire"
          ],
          "platform": "linux"
        },
        "sdl2",
        {
          "name": "libarchive",
          "default-features": false
        }
      ]
    },
    "steam-libs": {
      "description": "System libraries not provided in the Steam Sniper Runtime.",
      "dependencies": [
        "libmad",
        "catch2",
        {
          "name": "libarchive",
          "default-features": false
        }
      ]
    },
    "test-libs": {
      "description": "Dependencies used for unit testing.",
      "dependencies": [
        "catch2"
      ]
    }
  }
}
