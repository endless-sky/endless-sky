    {
      "name": "linux-ci",
      "displayName": "Linux CI",
      "description": "Builds for Linux for CI purposes",
      "inherits": "ci",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "linux64-release"
      }
    },
    {
      "name": "linux-gles-ci",
      "displayName": "Linux GLES CI",
